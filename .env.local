# ===== ОСНОВНЫЕ API КЛЮЧИ ДЛЯ ГЕНЕРАЦИИ =====

# BFL.ai (Black Forest Labs) - для Flux генерации
# Получить на: https://api.bfl.ai/
BFL_API_KEY=your_bfl_api_key_here

# OpenAI DALL-E 3 - альтернативный генератор
# Получить на: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ===== AZURE OPENAI (ОПЦИОНАЛЬНО) =====
AZURE_OPENAI_API_KEY=your_azure_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-04-01-preview
AZURE_OPENAI_DEPLOYMENT=gpt-4.1
AZURE_DEPLOYMENT_NAME=dall-e-3

# ===== NEXT.JS НАСТРОЙКИ =====
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_secret_here

# ===== ДЕБАГ =====
DEBUG=true
USE_MOCK_API=true
